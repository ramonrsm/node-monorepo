{
  "name": "node-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:backend && npm run build:shared && npm run build:types",
    "build:backend": "tsc -p packages/backend",
    "build:shared": "tsc -p packages/shared",
    "build:types": "tsc -p packages/types"
  },
  "devDependencies": {
    "@types/node": "^20.10.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
